@model OnlineStoreApp.Models.Cart
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="fas fa-shopping-cart"></i> Shopping Cart
    </h2>

    @if (Model.CartProducts == null || !Model.CartProducts.Any())
    {
        <div class="alert alert-info">
            <h5>Your cart is empty</h5>
            <p>
                Start shopping to add products to your cart!
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary ms-2">
                    Browse Products
                </a>
            </p>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        @foreach (var item in Model.CartProducts)
                        {
                            <div class="row mb-4 pb-4 border-bottom">
                                <div class="col-md-3">
                                    <img src="@item.Product?.Image" 
                                         alt="@item.Product?.Title" 
                                         class="img-fluid rounded"
                                         style="height:150px; width:100%; object-fit:cover;" />
                                </div>
                                <div class="col-md-6">
                                    <h5 class="fw-bold">@item.Product?.Title</h5>
                                    @if (item.Product?.Category != null)
                                    {
                                        <p class="text-muted mb-1">
                                            <i class="fas fa-tags"></i> @item.Product.Category.Type
                                        </p>
                                    }
                                    <p class="text-muted mb-1">
                                        <i class="fas fa-shoe-prints"></i> @item.Product?.Type
                                    </p>
                                    <p class="text-success fw-bold fs-5 mb-0">
                                        @item.Product?.Price.ToString("0.00") RON
                                    </p>
                                </div>
                                <div class="col-md-3 text-end">
                                    <form asp-action="Remove" method="post">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Remove
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Subtotal:</span>
                            <span class="fw-bold">@Model.TotalPrice.ToString("0.00") RON</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Shipping:</span>
                            <span>Free</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong class="text-success fs-5">@Model.TotalPrice.ToString("0.00") RON</strong>
                        </div>
                        <button class="btn btn-success w-100" disabled>
                            <i class="fas fa-credit-card"></i> Proceed to Checkout
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">
                            Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

