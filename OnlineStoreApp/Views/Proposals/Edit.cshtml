@model OnlineStoreApp.Models.Proposal

@{
    ViewData["Title"] = "Edit Proposal";
}

<section class="content mt-4">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="card card-warning card-outline shadow-sm">
                    <div class="card-header">
                        <h3 class="card-title fw-bold">
                            <i class="fas fa-edit me-2"></i> Edit Rejected Proposal
                        </h3>
                    </div>

                    <div class="card-body">

                        @* Rejection reason *@
                        @if (!string.IsNullOrEmpty(Model.RejectionReason))
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-times-circle me-1"></i>
                                <strong>Rejection reason:</strong><br />
                                @Model.RejectionReason
                            </div>
                        }

                        @* Current image *@
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <div class="text-center mb-4">
                                <img src="@Model.Image"
                                     class="img-fluid rounded shadow-sm"
                                     style="max-height: 280px;" />
                            </div>
                        }

                        <form asp-action="Edit" method="post" enctype="multipart/form-data">

                            <input type="hidden" asp-for="Id" />

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Title" class="form-label fw-semibold"></label>
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="Price" class="form-label fw-semibold"></label>
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-semibold"></label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Category</label>

                                <div id="categorySelectWrapper">
                                    <select name="Category" class="form-control" asp-items="ViewBag.Categories">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                </div>

                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">
                                    Update image
                                </label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" name="Image" class="custom-file-input" />
                                        <label class="custom-file-label">Choose file</label>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i> Back
                                </a>

                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-paper-plane me-1"></i> Resubmit
                                </button>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    const checkbox = document.getElementById("newCategoryCheckbox");
    const selectWrapper = document.getElementById("categorySelectWrapper");
    const inputWrapper = document.getElementById("categoryInputWrapper");

    const select = selectWrapper.querySelector("select");
    const input = inputWrapper.querySelector("input");

    input.disabled = true;

    checkbox.addEventListener("change", () => {
        if (checkbox.checked) {
            selectWrapper.classList.add("d-none");
            inputWrapper.classList.remove("d-none");
            select.disabled = true;
            input.disabled = false;
        } else {
            inputWrapper.classList.add("d-none");
            selectWrapper.classList.remove("d-none");
            input.disabled = true;
            select.disabled = false;
        }
    });
</script>
