@model OnlineStoreApp.Models.Proposal

@{
    ViewData["Title"] = "Edit Proposal";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm">
                <div class="card-body p-4">

                    <h2 class="fw-bold mb-3 text-center">
                        Edit Rejected Proposal
                    </h2>

                    <!--
                        ðŸ”´ IMPORTANT
                        Nu mai blocÄƒm editarea Ã®n View pe baza Status-ului.
                        Decizia asta trebuie sÄƒ fie Ã®n Controller.
                    -->

                    <!-- Rejection reason -->
                    @if (!string.IsNullOrEmpty(Model.RejectionReason))
                    {
                        <div class="alert alert-danger">
                            <strong>Rejection reason:</strong><br />
                            @Model.RejectionReason
                        </div>
                    }

                    <!-- Imagine curentÄƒ -->
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <div class="mb-4 text-center">
                            <img src="@Model.Image" alt="Proposal image" class="img-fluid rounded"
                                style="max-height: 300px;" />
                        </div>
                    }

                    <form asp-action="Edit" method="post" enctype="multipart/form-data">

                        <!--
                            âœ… NECESAR
                            FÄƒrÄƒ astea, ModelBinding-ul rupe Status-ul
                        -->
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Status" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Title -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        </div>

                        <!-- Price -->
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-semibold"></label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" />
                        </div>

                        <!-- Category -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Categorie</label>

                            <!-- Select categorie existentÄƒ -->
                            <div id="categorySelectWrapper">
                                <select asp-for="Category" class="form-control" asp-items="ViewBag.Categories">
                                    <option value="">-- Select Category --</option>
                                </select>
                            </div>

                            <!-- Input categorie nouÄƒ -->
                            <div id="categoryInputWrapper" class="d-none">
                                <input asp-for="Category" class="form-control" placeholder="Categorie nouÄƒ" />
                            </div>

                            <!-- Checkbox toggle -->
                            <div class="form-check mt-3">
                                <input type="checkbox" id="newCategoryCheckbox" class="form-check-input" />
                                <label class="form-check-label" for="newCategoryCheckbox">
                                    SugereazÄƒ categorie nouÄƒ
                                </label>
                            </div>

                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <!-- Image -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                Update image (optional)
                            </label>
                            <input type="file" name="Image" class="form-control" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Back
                            </a>

                            <button type="submit" class="btn btn-primary">
                                Resubmit Proposal
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    const checkbox = document.getElementById("newCategoryCheckbox");
    const selectWrapper = document.getElementById("categorySelectWrapper");
    const inputWrapper = document.getElementById("categoryInputWrapper");

    const select = selectWrapper.querySelector("select");
    const input = inputWrapper.querySelector("input");

    // ðŸ”’ Default: select activ, input dezactivat
    input.disabled = true;

    checkbox.addEventListener("change", () => {
        if (checkbox.checked) {
            selectWrapper.classList.add("d-none");
            inputWrapper.classList.remove("d-none");

            select.disabled = true;
            input.disabled = false;
        } else {
            inputWrapper.classList.add("d-none");
            selectWrapper.classList.remove("d-none");

            input.disabled = true;
            select.disabled = false;
        }
    });
</script>