@using OnlineStoreApp.Extensions
@model OnlineStoreApp.Models.Proposal

@{
    ViewData["Title"] = "Proposal Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm">
                <div class="card-body p-4">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2 class="fw-bold mb-0">@Model.Title</h2>

                        <span
                            class="badge 
                            @(Model.Status == ProposalStatus.Pending ? "bg-warning text-dark" : Model.Status == ProposalStatus.Accepted ? "bg-success" : "bg-danger")">
                            @EnumExtensions.GetDisplayName(Model.Status)
                        </span>
                    </div>

                    @if (User.IsInRole("Admin"))
                    {
                        <p class="text-muted mb-2">
                            Propusă de <strong>@Model.Username</strong>
                        </p>
                    }

                    <hr />

                    <!-- Image -->
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <div class="mb-4 text-center">
                            <img src="@Model.Image" alt="Proposal image" class="img-fluid rounded"
                                style="max-height: 300px;" />
                        </div>
                    }

                    <!-- Description -->
                    <div class="mb-3">
                        <h5 class="fw-semibold">Descriere</h5>
                        <p class="text-muted">@Model.Description</p>
                    </div>

                    <!-- Price + Category -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="fw-semibold">Preț</h6>
                            <p>@Model.Price.ToString("0.00") RON</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-semibold">Categorie</h6>
                            <p>@Model.Category</p>
                        </div>
                    </div>
                    @if (Model.Status == ProposalStatus.Rejected &&
                                        !string.IsNullOrEmpty(Model.RejectionReason))
                    {
                        <div class="alert alert-danger mt-4">
                            <strong>Motivul respingerii:</strong><br />
                            @Model.RejectionReason
                        </div>
                    }
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Back
                        </a>

                        @if (User.IsInRole("Colaborator") && Model.Status == ProposalStatus.Rejected)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                Editează Propunerea
                            </a>
                        }

                        @if (User.IsInRole("Admin") && Model.Status == ProposalStatus.Pending)
                        {
                            <div>
                                <form asp-action="Approve" asp-route-id="@Model.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-success me-2">
                                        Aprobă
                                    </button>
                                </form>

                                <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                    Respinge
                                </button>
                                <div class="modal fade" id="rejectModal" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">

                                            <form asp-action="Reject" method="post">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Respinge Propunerea</h5>
                                                    <button type="button" class="btn-close"
                                                        data-bs-dismiss="modal"></button>
                                                </div>

                                                <div class="modal-body">
                                                    <input type="hidden" name="id" value="@Model.Id" />

                                                    <div class="mb-3">
                                                        <label class="form-label fw-semibold">
                                                            Motivul respingerii
                                                        </label>
                                                        <textarea name="reason" class="form-control" rows="4"
                                                        placeholder="Introduceți motivul respingerii aici..."
                                                        required></textarea>
                                                    </div>
                                                </div>

                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-outline-secondary"
                                                        data-bs-dismiss="modal">
                                                        Cancel
                                                    </button>

                                                    <button type="submit" class="btn btn-danger">
                                                        Respinge
                                                    </button>
                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>