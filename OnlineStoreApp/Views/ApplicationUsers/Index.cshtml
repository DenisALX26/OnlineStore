@using Microsoft.AspNetCore.Identity
@model List<ApplicationUser>
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Users";
}

<section class="content mt-4">
    <div class="container-fluid">

        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-users me-2"></i> Registered Users
                </h3>
            </div>

            <div class="card-body table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Username</th>
                            <th>Role</th>
                            <th style="width: 250px;">Change role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            var roles = await UserManager.GetRolesAsync(user);
                            var role = roles.FirstOrDefault() ?? "None";

                            <tr>
                                <td>@user.UserName</td>

                                <td>
                                    <span class="badge bg-info">
                                        @role
                                    </span>
                                </td>

                                <td>
                                    <form asp-action="ChangeRole" method="post" class="d-flex gap-2">
                                        <input type="hidden" name="userId" value="@user.Id" />

                                        <select name="newRole" class="form-select form-select-sm">
                                            <option value="Customer" selected="@(role == "Customer")">Customer</option>
                                            <option value="Admin" selected="@(role == "Admin")">Admin</option>
                                            <option value="Colaborator" selected="@(role == "Colaborator")">Colaborator</option>
                                        </select>

                                        <button type="submit" class="btn btn-sm btn-primary">
                                            <i class="fas fa-save"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</section>
