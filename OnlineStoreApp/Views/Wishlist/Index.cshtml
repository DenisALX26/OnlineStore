@model Wishlist
@{
    Layout = "_Layout";
    ViewData["Title"] = "Wishlist";
}

<div class="container mt-4" style="padding-bottom: 15rem; margin-bottom: 5rem;">
    <h2 class="mb-4">
        <i class="fas fa-heart"></i> My Wishlist
    </h2>

    @if (!Model.WishlistProducts.Any())
    {
        <div class="alert alert-info">
            <h5>Wishlist gol</h5>
            <p>
                Bate v√¢ntul pe aici üå¨Ô∏è  
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary ms-2">
                    Vezi produsele
                </a>
            </p>
        </div>
    }
    else
    {
        <div class="row g-4">

            @foreach (var item in Model.WishlistProducts)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 product-card">

                        <!-- IMAGE -->
                        <div class="card-body p-0">
                            @if (item.Product != null)
                            {
                                <img src="@item.Product.Image"
                                     alt="@item.Product.Title"
                                     class="img-fluid"
                                     style="height:220px; width:100%; object-fit:cover;">
                            }
                        </div>

                        <div class="card-body">
                            @if (item.Product != null)
                            {
                                <h5 class="card-title fw-bold">
                                    @item.Product.Title
                                </h5>

                                <p class="text-muted mb-1">
                                    <i class="fas fa-tags"></i>
                                    @item.Product.Category?.Type
                                </p>

                                <p class="text-muted mb-1">
                                    <i class="fas fa-shoe-prints"></i>
                                    Picior: @item.Product.Type
                                </p>

                                <h4 class="text-primary mt-3">
                                    @item.Product.Price.ToString("0.00") RON
                                </h4>
                            }

                        </div>

                        <!-- ACTIONS -->
                        @if (item.Product != null)
                        {
                            <div class="card-footer d-flex justify-content-between">

                                <form asp-controller="Cart"
                                      asp-action="Add"
                                      method="post"
                                      class="w-75">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button class="btn btn-success btn-block">
                                        <i class="fas fa-shopping-cart"></i>
                                        Move to cart
                                    </button>
                                </form>

                                <form asp-controller="Wishlist" asp-action="Remove" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>

                            </div>
                        }

                    </div>
                </div>
            }

        </div>
    }

</div>
