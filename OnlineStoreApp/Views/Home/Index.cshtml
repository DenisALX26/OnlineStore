@model List<OnlineStoreApp.Models.Product>
@{
    ViewData["Title"] = "All Products";
}

<div class="container-fluid mt-4">

    <!-- SEARCH BAR -->
    <div class="row mb-4">
        <div class="col-md-6 mx-auto">
            <form asp-controller="Home" asp-action="Index" method="get" class="d-flex">
                <input type="text"
                       name="search"
                       value="@ViewBag.Search"
                       class="form-control me-2"
                       placeholder="Search products..." />
                <button class="btn btn-primary">
                    Search
                </button>
            </form>
        </div>
    </div>

    <div class="row">

        <!-- SIDEBAR FILTER -->
        <div class="col-lg-2 col-md-3 mb-4">

            <div class="card">
                <div class="card-header fw-bold">
                    Categories
                </div>

                <div class="list-group list-group-flush">

                    <a asp-action="Index"
                       class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == null ? "active" : "")">
                        All Categories
                    </a>

                    @foreach (var cat in ViewBag.Categories as List<Category>)
                    {
                        <a asp-action="Index"
                           asp-route-category="@cat.Type"
                           class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == cat.Type ? "active" : "")">
                            @cat.Type
                        </a>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header fw-bold">
                    Sort by price
                </div>
                <div class="card-body">
                    <a asp-route-price="high" class="btn btn-outline-secondary w-100 mb-2">
                        Price ↑
                    </a>
                    <a asp-route-price="low" class="btn btn-outline-secondary w-100">
                        Price ↓
                    </a>
                </div>
            </div>

        </div>

        <!-- PRODUCTS -->
        <div class="col-lg-10 col-md-9">

            <div class="row g-4">

                @foreach (var product in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">

                        <div class="card h-100 shadow-sm">

                            @if (!string.IsNullOrWhiteSpace(product.Image))
                            {
                                <div class="card-img-top" style="width: 100%; aspect-ratio: 1 / 1; overflow: hidden; padding: 10px; background-color: #f8f9fa;">
                                    <img src="@product.Image"
                                         style="width: 100%; height: 100%; object-fit: cover;"
                                         alt="@product.Title"
                                         onerror="this.onerror=null; this.src='/images/placeholder.jpg'; this.alt='Image not found';" />
                                </div>
                            }
                            else
                            {
                                <div class="card-img-top d-flex align-items-center justify-content-center bg-light"
                                     style="width: 100%; aspect-ratio: 1 / 1; padding: 10px;">
                                    <span class="text-muted">No image</span>
                                </div>
                            }

                            <div class="card-body d-flex flex-column">

                                <h6 class="fw-bold">@product.Title</h6>

                                @if (product.Category != null)
                                {
                                    <span class="badge bg-secondary mb-1">
                                        @product.Category.Type
                                    </span>
                                }

                                <span class="badge bg-info mb-2">
                                    @product.Type
                                </span>

                                <p class="fw-bold mt-auto mb-2 text-success">
                                    @product.Price.ToString("0.00") RON
                                </p>

                                <!-- ACTION BUTTONS -->
                                <div class="d-grid gap-2">
                                    <a asp-controller="Products"
                                       asp-action="Details"
                                       asp-route-id="@product.Id"
                                       class="btn btn-primary">
                                        View
                                    </a>

                                    @if (User.Identity!.IsAuthenticated)
                                    {
                                        if (User.IsInRole("Customer"))
                                        {
                                            <form asp-controller="Wishlist"
                                                  asp-action="Add"
                                                  asp-route-productId="@product.Id"
                                                  method="post">
                                                <button class="btn btn-outline-danger w-100">
                                                    ❤️ Wishlist
                                                </button>
                                            </form>

                                            <form asp-controller="Cart"
                                                  asp-action="Add"
                                                  asp-route-productId="@product.Id"
                                                  method="post">
                                                <button class="btn btn-outline-success w-100">
                                                    🛒 Add to cart
                                                </button>
                                            </form>
                                        }
                                        else if (User.IsInRole("Admin"))
                                        {
                                            <a asp-controller="Products"
                                               asp-action="Edit"
                                               asp-route-id="@product.Id"
                                               class="btn btn-warning w-100">
                                                <i class="fas fa-edit"></i> Edit in Admin Panel
                                            </a>
                                        }
                                        else
                                        {
                                            <div class="alert alert-warning w-100 mb-2" role="alert">
                                                <small><i class="fas fa-exclamation-triangle"></i> Access denied</small>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <a asp-area="Identity"
                                           asp-page="/Account/Login"
                                           asp-route-returnUrl="@Url.Action("Details", "Products", new { id = product.Id })"
                                           class="btn btn-outline-danger w-100">
                                            ❤️ Wishlist
                                        </a>

                                        <a asp-area="Identity"
                                           asp-page="/Account/Login"
                                           asp-route-returnUrl="@Url.Action("Details", "Products", new { id = product.Id })"
                                           class="btn btn-outline-success w-100">
                                            🛒 Add to cart
                                        </a>
                                    }
                                </div>

                            </div>
                        </div>

                    </div>
                }

            </div>

        </div>
    </div>
</div>
