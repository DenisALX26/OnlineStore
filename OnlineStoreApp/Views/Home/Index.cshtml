@{
    ViewData["Title"] = "Home Page";
}
@model List<OnlineStoreApp.Models.Product>

<div class="container mt-5">
    <h1 class="mb-4 text-center">All Products</h1>
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Title</h5>
                        <p class="card-text text-muted">@product.Description</p>
                        <p class="mt-auto mb-1">
                            <span class="fw-bold">Price:</span>
                            @product.Price.ToString("0.00") RON
                        </p>
                        @if (product.Category != null)
                        {
                            <p class="mb-1">
                                <span class="fw-bold">Category:</span>
                                @product.Category.Type
                            </p>
                        }
                        <p class="mb-1">
                            <span class="fw-bold">Stock: </span>@product.Stock
                        </p>
                        <p class="mb-3">
                            <span class="fw-bold">Side: </span>@product.Type
                        </p>
                        @if (!User.Identity!.IsAuthenticated)
                        {
                            <a class="btn btn-primary w-100" asp-area="Identity" asp-page="/Account/Register">View Product</a>
                        }
                        else
                        {
                            <a href="#" class="btn btn-primary w-100">View Product</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>