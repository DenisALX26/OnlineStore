<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="~/adminlte/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css">
</head>

<body class="hold-transition @(User.IsInRole("Admin") ? "sidebar-mini layout-fixed" : "layout-top-nav")">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">

            @if (User.IsInRole("Admin"))
            {
                <!-- Left navbar -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#">
                            <i class="fas fa-bars"></i>
                        </a>
                    </li>
                </ul>
}

            <!-- Right navbar -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="/" class="nav-link text-danger" title="Exit Admin Panel">
                        <i class="fas fa-sign-out-alt"></i>
                        Exit
                    </a>
                </li>
            </ul>

        </nav>


        @if (User.IsInRole("Admin"))
        {
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <a href="/Home/Admin" class="brand-link text-center">
                    <span class="brand-text font-weight-light">Admin Panel</span>
                </a>

                <div class="sidebar">
                    <partial name="_AdminMenu" />
                </div>
            </aside>
        }

        <!-- Content -->
        <div class="content-wrapper">
            <section class="content pt-4">
                @RenderBody()
            </section>
        </div>

    </div>

    <!-- AdminLTE JS -->
    <script src="~/adminlte/plugins/jquery/jquery.min.js"></script>
    <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminlte/plugins/chart.js/Chart.min.js"></script>
    <script src="~/adminlte/plugins/jquery-countto/jquery.countTo.js"></script>
    <script src="~/adminlte/dist/js/adminlte.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>