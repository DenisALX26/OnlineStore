<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="~/adminlte/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
</head>

<body class="hold-transition @(User.IsInRole("Admin") ? "sidebar-mini layout-fixed" : "layout-top-nav")">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">

            @if (User.IsInRole("Admin"))
            {
                <!-- Left navbar -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#">
                            <i class="fas fa-bars"></i>
                        </a>
                    </li>
                </ul>
}

            <!-- Right navbar -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <button class="theme-toggle" id="themeToggle" aria-label="Toggle theme" style="margin-right: 1rem;">
                        <i class="fas fa-moon" id="themeIcon"></i>
                        <span id="themeText">Dark</span>
                    </button>
                </li>
                <li class="nav-item">
                    <a href="/" class="nav-link text-danger" title="Exit Admin Panel">
                        <i class="fas fa-sign-out-alt"></i>
                        Exit
                    </a>
                </li>
            </ul>

        </nav>


        @if (User.IsInRole("Admin"))
        {
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <a href="/Home/Admin" class="brand-link text-center">
                    <span class="brand-text font-weight-light">Admin Panel</span>
                </a>

                <div class="sidebar">
                    <partial name="_AdminMenu" />
                </div>
            </aside>
        }

        <!-- Content -->
        <div class="content-wrapper">
            <section class="content pt-4">
                @RenderBody()
            </section>
        </div>

    </div>

    <!-- AdminLTE JS -->
    <script src="~/adminlte/plugins/jquery/jquery.min.js"></script>
    <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminlte/plugins/chart.js/Chart.min.js"></script>
    <script src="~/adminlte/plugins/jquery-countto/jquery.countTo.js"></script>
    <script src="~/adminlte/dist/js/adminlte.min.js"></script>

    <script>
        // Theme Toggle Functionality
        (function() {
            const themeToggle = document.getElementById('themeToggle');
            const themeIcon = document.getElementById('themeIcon');
            const themeText = document.getElementById('themeText');
            const html = document.documentElement;
            
            // Load saved theme or default to light
            const savedTheme = localStorage.getItem('theme') || 'light';
            html.setAttribute('data-theme', savedTheme);
            updateThemeIcon(savedTheme);
            
            // Toggle theme on button click
            if (themeToggle) {
                themeToggle.addEventListener('click', function() {
                    const currentTheme = html.getAttribute('data-theme');
                    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                    html.setAttribute('data-theme', newTheme);
                    localStorage.setItem('theme', newTheme);
                    updateThemeIcon(newTheme);
                });
            }
            
            function updateThemeIcon(theme) {
                if (themeIcon && themeText) {
                    if (theme === 'dark') {
                        themeIcon.className = 'fas fa-sun';
                        themeText.textContent = 'Light';
                    } else {
                        themeIcon.className = 'fas fa-moon';
                        themeText.textContent = 'Dark';
                    }
                }
            }
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>

</html>