@model OnlineStoreApp.Models.Product
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Product";
}

<section class="content">
    <div class="container-fluid">

        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="card card-danger card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            Delete Product
                        </h3>
                    </div>

                    <div class="card-body">
                        <p class="mb-3">
                            Ești sigur că vrei să ștergi produsul:
                        </p>

                        <h5 class="text-danger font-weight-bold">
                            "@Model.Title"
                        </h5>

                        <ul class="list-unstyled mt-3">
                            <li><b>Price:</b> @Model.Price.ToString("0.00")</li>
                            <li><b>Category:</b> @Model.Category?.Type</li>
                        </ul>

                        <p class="text-muted mt-3">
                            ⚠️ Această acțiune este <b>ireversibilă</b>.
                        </p>
                    </div>

                    <div class="card-footer text-right">
                        <form asp-action="Delete" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />

                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>

                        <a asp-action="Index" class="btn btn-secondary ml-2">
                            Cancel
                        </a>
                    </div>

                </div>

            </div>
        </div>

    </div>
</section>
