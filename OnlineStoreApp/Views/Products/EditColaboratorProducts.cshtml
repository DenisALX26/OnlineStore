@model OnlineStoreApp.Models.ProductEditProposal

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit Product (Pending Approval)";
}

<section class="content">
    <div class="container-fluid">

        <div class="row justify-content-center">
            <div class="col-md-8">

                <div class="card card-warning card-outline">

                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-edit mr-2"></i>
                            Edit Product - Approval Required
                        </h3>
                    </div>

                    <form asp-controller="Products" asp-action="EditColaboratorProducts" method="post">

                        <div class="card-body">

                            <!-- Hidden fields -->
                            <input type="hidden" asp-for="ProductId" />
                            <input type="hidden" asp-for="UserId" />

                            <div class="alert alert-info">
                                <i class="fas fa-info-circle mr-1"></i>
                                Any change you submit will need admin approval before going live.
                            </div>

                            <div class="form-group">
                                <label asp-for="Title"></label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Price"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CategoryId">Category</label>
                                <select asp-for="CategoryId"
                                        class="form-control"
                                        asp-items="ViewBag.Categories">
                                    <option value="">-- Select Category --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="card-footer text-right">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-paper-plane"></i>
                                Submit for Approval
                            </button>

                            <a asp-action="Index" class="btn btn-secondary ml-2">
                                Cancel
                            </a>
                        </div>

                    </form>

                </div>

            </div>
        </div>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
