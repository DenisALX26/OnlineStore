@model IEnumerable<OnlineStoreApp.Models.Product>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Products";
}

<section class="content">
    <div class="container-fluid">

        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Products</h3>
                @if (User.IsInRole("Admin"))
                {
                    <div class="card-tools">
                        <a asp-action="Create" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> Add Product
                        </a>
                    </div>
                }
            </div>

            <div class="card-body p-0">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Type</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th style="width:200px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Price.ToString("0.00")</td>
                                <td>@item.Type</td>
                                <td>@item.Category?.Type</td>
                                <td>@item.Status</td>
                                <td class="text-nowrap">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mr-1">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mr-1">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                    else if (User.IsInRole("Colaborator"))
                                    {
                                        <a asp-action="EditColaboratorProducts" asp-route-productId="@item.Id"
                                            class="btn btn-warning btn-sm mr-1">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="card-body">
                    <div class="alert alert-info mb-0">
                        No products available.
                    </div>
                </div>
            }

        </div>

    </div>
</section>